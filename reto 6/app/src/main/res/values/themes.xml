<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidTicTacToe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Theme for the popup menu-->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/minecraft_font2</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:colorBackground">#C1323232</item>
    </style>

    <!-- Theme for the difficulty dialog menu-->
    <style name="CustomAlertDialog" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/minecraft_font2</item>
        <item name="fontFamily">@font/minecraft_font2</item>
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="buttonBarNeutralButtonStyle">@style/buttonDialogMenu</item>
    </style>

    <!-- Theme for the button dialog menu-->
    <style name="buttonDialogMenu" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/minecraft_font2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/purple_200</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>